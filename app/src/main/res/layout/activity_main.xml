<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/activity_main"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:orientation="vertical"
      tools:context="com.example.pasca.yugiohcart.MainActivity">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progress="0"
            android:layout_weight="0.9"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_gravity="end"
            android:layout_weight="0.1"
            android:id="@+id/progress_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/progress_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/search_card_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/card_search"
        android:onClick="onClickSearchCardButton"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="gone"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/my_cart_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="onClickMyCartButton"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="@string/my_cart"
        android:visibility="gone"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/my_collection_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="onClickMyCollectionButton"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="@string/my_collection"
        android:visibility="gone"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/retry_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="@string/retry_tv_text"
        android:visibility="gone"/>

</LinearLayout>
